<% provide :title, @user.name.to_s + " - " + t(".title") %>
<% provide :button_text, t(".update_btn") %>

<h1><%= t ".title" %></h1>
<div class="row form-wrapper">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), "#", target: :_blank %>
    </div>
  </div>
</div>
